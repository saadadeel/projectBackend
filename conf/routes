# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# test
GET     /saad                           controllers.Application.saad()

# Mongotest
GET     /mongoTest                           controllers.Application.mongoTest()

# servertest
GET     /serverTest                           controllers.Application.serverTest()

# User requests Authentication and Authorization to access the information of the user
POST    /login/submit                   controllers.Security.Authenticate()

# User requests Authentication and Authorization to access the information of the user
GET    /login/submit:args                   controllers.Security.newAuthenticate(args)

# secTest
GET     /login/test                           controllers.Security.test()

# User
GET     /user/details/:un                          controllers.Application.userDetails(un)

# Sign in
POST     /user/signIn                          controllers.Application.signIn()

GET      /testActivities                        controllers.Activities.setRace()

POST    /activity/Run                           controllers.Activities.recordRun()

GET   /activity/test                           controllers.Activities.runTest()

GET   /socketUser                                    controllers.UserSockets.getUser()