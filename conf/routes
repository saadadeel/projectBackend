# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# test
GET     /saad                           @controllers.Application.saad()

# Mongotest
GET     /mongoTest                           @controllers.Application.mongoTest()

# servertest
GET     /serverTest                             @controllers.Application.serverTest()

# User requests Authentication and Authorization to access the information of the user
POST    /login/submit                            @controllers.Security.Authenticate()

# User requests Authentication and Authorization to access the information of the user
GET    /login/:args                             @controllers.Security.newAuthenticate(args)

# Get User Data
GET     /user/:un                               @controllers.Application.userDetails(un)
GET     /user/:un/runs                          @controllers.Application.userRuns(un)
GET     /user/:un/races                         @controllers.Application.userRaces(un)
GET     /user/:un/races/:raceID                 @controllers.Application.userSingleRace(un, raceID)
GET     /user/:un/league                        @controllers.Application.userLeague(un)

# Post user data
POST     /user                                  @controllers.Application.signIn()
POST    /user/:un/run                           @controllers.Activities.recordRun(un)

# Running
GET      /testActivities                        @controllers.Activities.setRace()
GET   /activity/test                            @controllers.Activities.runTest()

# Racing
POST    /activity/acceptRace                    @controllers.Activities.setRace()
GET   /activity/acceptRace                    @controllers.Activities.setRace()
POST /activity/completeRace                     @controllers.Activities.racePortionCompleted()
POST /activity/declineRace                     @controllers.Activities.deleteRace()

# testing
GET /league/test                                       @controllers.Application.addTestUser()
GET /activity/declineRace                              @controllers.Activities.deleteRace()



